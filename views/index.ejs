<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Code book</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
</head>
<body>
<div class="container pt-3">
    <form id="form" class="form-inline" method="post">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="searchOptions" id="inlineRadio1" value="startsWith" checked>
            <label class="form-check-label" for="inlineRadio1">startsWith</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="searchOptions" id="inlineRadio2" value="contains">
            <label class="form-check-label" for="inlineRadio2">contains</label>
        </div>
        <div class="form-group mb-2">
            <label for="staticText" class="sr-only">Search Text</label>
            <input type="text" class="form-control" id="staticText" name="searchText" value="">
        </div>
        <input type="submit" value="search">
        <button class="btn btn-primary mb-2 ml-2" onclick="search();">Search</button>
    </form>
    <div class="_list">
        <%- include('list', {data: data}); %>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#form').submit(function() {
            var form = $("form")[0];
            var formData = form.serialize();

            $.ajax({
                cache : false,
                url : "/list/getItems",
                processData: false,
                type : 'POST',
                data : formData,
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                dataType: 'html',
                success : function(data) {
                    console.log(data)
                    $('._list').html(data);
                },
                error : function(xhr, status) {
                    alert(xhr + " : " + status);
                }
            });
        })
    });
</script>
</body>
</html>
