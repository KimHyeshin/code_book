<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Code book</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
</head>
<body>
<div class="container pt-3">
    <form class="form-inline" action="http://localhost:3000/searchResult" method="post">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="searchOptions" id="inlineRadio1" value="startsWith" <% if(searchOptions == 'startsWith') { %> checked <% }%>>
            <label class="form-check-label" for="inlineRadio1">startsWith</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" name="searchOptions" id="inlineRadio2" value="contains" <% if(searchOptions == 'contains') { %> checked <% }%>>
            <label class="form-check-label" for="inlineRadio2">contains</label>
        </div>
        <div class="form-group mb-2">
            <label for="staticText" class="sr-only">Search Text</label>
            <input type="text" class="form-control" id="staticText" name="searchText" value="<%= searchText %>">
        </div>
        <button type="submit" class="btn btn-primary mb-2 ml-2">Search</button>
    </form>
    <table class="table mt-2">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">KeyWord</th>
            <th scope="col">Description</th>
            <th scope="col">Date</th>
            <th scope="col">Author</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i=0; i<data.length;i++) {%>
        <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= data[i].keyword %></td>
            <td><%= data[i].description %></td>
            <td><%= data[i].date %></td>
            <td><%= data[i].author %></td>
        </tr>
        <% }%>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    window.onload = function(){
        var data = {};
        console.log('onload')
    }
</script>
</body>
</html>
